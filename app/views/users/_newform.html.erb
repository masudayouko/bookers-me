<div class ="row">
<div class="col-xs-3 partial">

	<h2>User info</h2>

	<%= attachment_image_tag(user,:profile_image,:fill,100,100,fallback: "no_image.jpg")%>
	<table class ="table">
	  <tbody>
	  	<tr>
	  		<th>name</th>
	  		<th><%= user.name %></th>
	  	</tr>
	  	<tr>
	  		<th>introduction</th>
	  		<th><%= user.introduction %></th>
	  	</tr>
      </tbody>
    </table>

    <div class ="row">
       <div class ="col-md-3">
       	<%= link_to "",edit_user_path(current_user.id),class:"btn btn-default glyphicon glyphicon-wrench" %>
       </div>
   </div>

    <h2>New book</h2>
    <%= form_for(book)do|f|%>
      <h5>Title</h5>
       <%= f.text_field :title %>

      <h5>opinion</h5>
       <%= f.text_area :body %>
    <% end %>

</div>

